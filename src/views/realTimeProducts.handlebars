<div class="container mt-5">
<h1 class="mb-4">Carga de Artículo</h1>
<form id="form-carga">
    <div class="form-group">
        <label for="title">Título</label>
        <input type="text" class="form-control" id="title" placeholder="Ingrese el título del artículo">
    </div>
    <div class="form-group">
        <label for="description">Descripción</label>
        <textarea class="form-control" id="description" rows="3" placeholder="Ingrese la descripción del artículo"></textarea>
    </div>
    <div class="form-group">
        <label for="code">Código</label>
        <input type="text" class="form-control" id="code" placeholder="Ingrese el código del artículo">
    </div>
    <div class="form-group">
        <label for="price">Precio</label>
        <input type="number" class="form-control" id="price" placeholder="Ingrese el precio del artículo">
    </div>
    <div class="form-group">
        <label for="stock">Stock</label>
        <input type="number" class="form-control" id="stock" placeholder="Ingrese el stock del artículo">
    </div>
    <div class="form-group">
        <label for="category">Categoría</label>
        <input type="text" class="form-control" id="category" placeholder="Ingrese la categoría del artículo">
    </div>
    <div class="form-group">
        <label for="images">Cargar Imágenes</label>
        <input type="file" class="form-control-file" id="images" multiple>
    </div>
    <button type="submit" id="btn-submit" class="btn btn-primary">Cargar Artículo</button>
</form>

<hr class="my-5">

<!-- Listado de Productos -->
<div class="container my-5">
    <h2 class="text-center mb-4">Todos los Productos</h2>
        <div class="row">
            {{#each products}}
                <div class="col-md-4 mb-4">
                    <div class="card product-card">
                        <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Producto 1">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">${{this.price}}</p>
                            <a href="#" id="btn-delete" class="btn btn-primary">Quitar</a>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

</div>